<h1>This is the post's edit page</h1>

<%= form_for @post do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class:"form-control"%>
	</div>
	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, class:"form-control"%>
	</div><br>
	<div class="form-group">
		<%= f.label :image %>
		<%= f.file_field :image%>
	</div>
	<%= f.submit "Save Changes!" %>
<% end %>

<%= link_to "Back to post", post_path(@post) %>